{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist/",
    "rootDir": "src/",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@middlewares": ["src/middlewares"],
      "@middlewares/*": ["src/middlewares/*"],
      "@errors": ["src/errors"],
      "@errors/*": ["src/errors/*"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "dist/"]
}
