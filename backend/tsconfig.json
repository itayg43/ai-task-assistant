{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist/",
    "rootDir": "src/",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@constants": ["src/constants"],
      "@config": ["src/config"],
      "@types": ["src/types"],
      "@utils": ["src/utils"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "dist/"]
}
