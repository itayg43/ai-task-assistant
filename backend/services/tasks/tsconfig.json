{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist/",
    "rootDirs": ["src", "../../shared/src"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/src/*"],
      "@constants": ["src/constants"],
      "@types": ["src/types"],
      "@clients/*": ["src/clients/*"],
      "@routers/*": ["src/routers/*"],
      "@config/*": ["src/config/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@schemas/*": ["src/schemas/*"],
      "@repositories/*": ["src/repositories/*"],
      "@mocks/*": ["src/mocks/*"],
      "@utils/*": ["src/utils/*"],
      "@metrics/*": ["src/metrics/*"]
    }
  },
  "include": ["src/", "prisma/"],
  "exclude": ["node_modules/", "dist/"]
}
