{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist/",
    "rootDir": "src/",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/dist/*"],
      "@clients/*": ["src/clients/*"],
      "@routers/*": ["src/routers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@controllers/*": ["src/controllers/*"],
      "@schemas/*": ["src/schemas/*"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "dist/"]
}
