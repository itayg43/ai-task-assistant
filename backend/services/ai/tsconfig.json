{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist/",
    "rootDirs": ["src", "../../shared/src"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/src/*"],
      "@constants": ["src/constants"],
      "@types": ["src/types"],
      "@schemas": ["src/schemas"],
      "@clients/*": ["src/clients/*"],
      "@config/*": ["src/config/*"],
      "@routers/*": ["src/routers/*"],
      "@routers": ["src/routers"],
      "@middlewares/*": ["src/middlewares/*"],
      "@controllers/*": ["src/controllers/*"],
      "@capabilities": ["src/capabilities"],
      "@capabilities/*": ["src/capabilities/*"],
      "@utils/*": ["src/utils/*"],
      "@mocks/*": ["src/mocks/*"],
      "@metrics/*": ["src/metrics/*"],
      "@workers/*": ["src/workers/*"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "dist/"]
}
